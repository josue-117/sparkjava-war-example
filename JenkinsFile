pipeline {
   agent { label 'Josue' }
      stages {
          stage('Prueba') {
            steps {
              sh '''
              ls
              echo "Hello" '''
          }
        }
   stage('Build') {
            steps {
              sh '''docker run -t --rm --name my-maven-project -v "$(pwd)":/usr/src/mymaven -w /usr/src/mymaven maven:3.3-jdk-8 mvn clean install'''
          }
        }
   stage('Deploy') {
            steps {
              sh '''docker cp /home/prueba/workspace/prueba2/target/sparkjava-hello-world-1.0.war josue-tomcat://usr/local/tomcat/webapps'''
          }
        }
  }
}
